                                        value={postData.capacitePersonnes || ''}
                                        onChange={handleChangeInput}
                                        placeholder={t('common.capacite_placeholder')}
                                        dir={isRTL ? "rtl" : "ltr"}
                                    />
                                </Form.Group>
                            </Col>
                        </Row>
                    </Accordion.Body>
                </Accordion.Item>

                <Accordion.Item eventKey="1">
                    <Accordion.Header>
                        <i className={`fas fa-tv ${isRTL ? 'ms-2' : 'me-2'} text-success`}></i>
