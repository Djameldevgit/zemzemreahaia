                                </Form.Group>
                            </Col>
                            <Col md={4}>
                                <Form.Group>
                                    <Form.Label>{t('common.etage')}</Form.Label>
                                    <Form.Control
                                        type="number"
                                        name="etage"
                                        value={postData.etage || ''}
                                        onChange={handleChangeInput}
                                        placeholder={t('common.etage_placeholder')}
                                        dir={isRTL ? "rtl" : "ltr"}
                                    />
                                </Form.Group>
                            </Col>
                            <Col md={4}>
                                <Form.Group>
                                    <Form.Label>{t('common.capacite_personnes')}</Form.Label>
                                    <Form.Control
                                        type="number"
