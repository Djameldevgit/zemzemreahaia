const cron = require('node-cron');
const mongoose = require('mongoose');
const Users = require('../models/userModel');
const Posts = require('../models/postModel');
const Comments = require('../models/commentModel');
const Report = require('../models/reportModel');
const Notify = require('../models/notifyModel'); // ğŸ‘ˆ aÃ±ade tu modelo de notificaciones
/*
Cosas muy buenas del cÃ³digo

Uso de node-cron â†’ Programaste la tarea automÃ¡tica a medianoche (0 0 * * *), perfecto para mantenimiento.

EliminaciÃ³n en cascada â†’ Borras users, posts, comments, notificaciones y limpias referencias en followers/following. Muy ordenado.

PrevenciÃ³n de huÃ©rfanos â†’ Buen detalle al eliminar posts, comments, likes, notificaciones y reportes sin dueÃ±o.

SeparaciÃ³n de casos

Usuarios no verificados (>24h).

Usuarios verificados pero inactivos (>30 dÃ­as).

Limpieza de huÃ©rfanos.

Esto es exactamente lo que hacen redes sociales grandes en sus â€œjobs de mantenimientoâ€.*/




cron.schedule('0 0 * * *', async () => {
  console.log('ğŸ§¹ Iniciando limpieza profunda...');

  const twentyFourHoursAgo = new Date(Date.now() - 24 * 60 * 60 * 1000);
  const oneMonthAgo = new Date(Date.now() - 30 * 24 * 60 * 60 * 1000);

  try {
    // ğŸ”¹ 1. Eliminar usuarios NO VERIFICADOS hace mÃ¡s de 24h
    const usersToDelete = await Users.find({
      isVerified: false,
      createdAt: { $lt: twentyFourHoursAgo }
    }).select('_id username email');

    const userIds = usersToDelete.map(user => user._id);

    if (userIds.length > 0) {
      await Users.deleteMany({ _id: { $in: userIds } });
      await Posts.deleteMany({ user: { $in: userIds } });
      await Comments.deleteMany({ user: { $in: userIds } });
      await Notify.deleteMany({
        $or: [
          { user: { $in: userIds } },        // notificaciones enviadas por este usuario
          { recipients: { $in: userIds } }   // notificaciones dirigidas a este usuario
        ]
      });

      await Users.updateMany({}, {
        $pull: {
          followers: { $in: userIds },
          following: { $in: userIds }
        }
      });

      usersToDelete.forEach(user => {
        console.log(`ğŸ—‘ï¸ Usuario NO verificado eliminado: ${user.username} (${user.email})`);
      });

      console.log(`âœ… Usuarios no verificados eliminados: ${userIds.length}`);
    } else {
      console.log('âœ… No hay usuarios antiguos no verificados.');
    }

    // ğŸ”¹ 2. Obtener IDs vÃ¡lidos actuales
    const allUserIds = await Users.find({}).select('_id');
    const existingUserIds = new Set(allUserIds.map(u => u._id.toString()));

    const allPostIds = await Posts.find({}).select('_id');
    const existingPostIds = new Set(allPostIds.map(p => p._id.toString()));

    // ğŸ”¹ 3. Eliminar posts huÃ©rfanos
    const remainingPosts = await Posts.find({});
    for (const post of remainingPosts) {
      if (post.user && !existingUserIds.has(post.user.toString())) {
        await Posts.findByIdAndDelete(post._id);
        console.log(`ğŸš« Post huÃ©rfano eliminado: ${post._id}`);
      }
    }

    // ğŸ”¹ 4. Eliminar comentarios huÃ©rfanos
    const remainingComments = await Comments.find({});
    for (const comment of remainingComments) {
      if (comment.user && !existingUserIds.has(comment.user.toString())) {
        await Comments.findByIdAndDelete(comment._id);
        console.log(`ğŸš« Comentario huÃ©rfano eliminado: ${comment._id}`);
      }
    }

    // ğŸ”¹ 5. Eliminar usuarios verificados pero INACTIVOS (30 dÃ­as)
    const inactiveUsers = await Users.find({
      isVerified: true,
      createdAt: { $lt: oneMonthAgo }
    }).select('_id username email');

    const trulyInactive = [];
    for (const user of inactiveUsers) {
      const hasPosts = await Posts.exists({ user: user._id });
      const hasComments = await Comments.exists({ user: user._id });
      if (!hasPosts && !hasComments) {
        trulyInactive.push(user);
      }
    }

    if (trulyInactive.length > 0) {
      const inactiveIds = trulyInactive.map(user => user._id);
      await Users.deleteMany({ _id: { $in: inactiveIds } });
      await Notify.deleteMany({
        $or: [
          { user: { $in: inactiveIds } },
          { recipients: { $in: inactiveIds } }
        ]
      });

      await Users.updateMany({}, {
        $pull: {
          followers: { $in: inactiveIds },
          following: { $in: inactiveIds }
        }
      });

      trulyInactive.forEach(user => {
        console.log(`ğŸ˜´ Usuario inactivo eliminado: ${user.username} (${user.email})`);
      });

      console.log(`âœ… Usuarios verificados pero inactivos eliminados: ${inactiveIds.length}`);
    } else {
      console.log('âœ… No hay usuarios verificados inactivos para eliminar.');
    }

    // ğŸ”¹ 6. Eliminar reportes huÃ©rfanos
    await Report.deleteMany({
      $or: [
        { postId: { $nin: Array.from(existingPostIds) } },
        { userId: { $nin: Array.from(existingUserIds) } },
        { reportedBy: { $nin: Array.from(existingUserIds) } }
      ]
    });

    // ğŸ”¹ 7. Eliminar notificaciones huÃ©rfanas
    await Notify.deleteMany({
      $or: [
        { user: { $nin: Array.from(existingUserIds) } },
        { recipients: { $nin: Array.from(existingUserIds) } },
        { postId: { $nin: Array.from(existingPostIds) } }
      ]
    });

    // ğŸ”¹ 8. Limpiar likes huÃ©rfanos en posts y comentarios
    await Posts.updateMany({}, {
      $pull: { likes: { $nin: Array.from(existingUserIds) } }
    });
    await Comments.updateMany({}, {
      $pull: { likes: { $nin: Array.from(existingUserIds) } }
    });

    console.log('âœ… Likes huÃ©rfanos eliminados de posts y comentarios');
    console.log('âœ… Reportes y notificaciones huÃ©rfanas eliminados');
    console.log('ğŸ§¼ Limpieza completa realizada');
  } catch (err) {
    console.error('âŒ Error en limpieza profunda:', err.message);
  }
});
